# Makefile lab1 CS6015
# Aiden Pratt
# to build a target, enter make <target>
# targets: 
#clean deletes all .o and .out files and the executable
#printM prints the content of the MACROS
#run creates and runs the program in the terminal

CXX=c++
CFLAGS= -std=c++11
CXXSOURCE= Caps.cpp Clothing.cpp Pants.cpp main.cpp
HEADERS= Caps.h Clothing.h Pants.h

run: program
	./program

program: $(CXXSOURCE) $(HEADERS)
	$(CXX) $(CFLAGS) -o program $(CXXSOURCE)

.PHONY: clean

clean: 
	rm -f *.o *.out program

printM:
	$ (echo $(HEADERS) $(CXXSOURCE))

